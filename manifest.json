{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.4",
  "description": "__MSG_appDescription__",
  "default_locale": "ru",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus",
    "offscreen",
    "clipboardWrite",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-selected-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Shift+Alt+C"
      },
      "description": "__MSG_commandCopySelected__"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

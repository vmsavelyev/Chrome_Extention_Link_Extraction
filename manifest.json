{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.4",
  "description": "__MSG_appDescription__",
  "default_locale": "ru",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus",
    "offscreen",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
